<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tarena.catchat.ui.PostBlogActivity">

    <EditText
        android:id="@+id/et_post_content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_lg_btn"
        android:gravity="top"
        android:hint="请输入要发送内容..."
        android:padding="5dp" />

    <LinearLayout

        android:id="@+id/ll_imgcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_post_picture1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_post_picDelete1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_delete" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_post_picture2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_post_picDelete2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_delete" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_post_picture3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_post_picDelete3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_delete" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_post_picture4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_post_picDelete4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_delete" />
        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:gravity="bottom">

        <TextView
            android:id="@+id/tv_postblog_imagenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:padding="5dp"
            android:text="4"
            android:textSize="16sp" />

        <com.example.tarena.catchat.thirdparty.NumberProgressBar
            android:id="@+id/npb_postblog_progressbar"
            style="@style/NumberProgressBar_Default"
            android:visibility="invisible"
            app:progress_reached_bar_height="15dp"
            app:progress_text_size="16sp"
            app:progress_unreached_bar_height="7.5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="2"
        android:gravity="bottom">

        <ImageButton
            android:id="@+id/btn_postblog_plus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edit_input_bg"
            android:src="@drawable/ic_plus" />

        <Button
            android:id="@+id/btn_postblog_picture"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_chat_add_picture_selector"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_postblog_camera"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_chat_add_camera_selector"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_postblog_location"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/btn_chat_add_location_selector"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>
